{
    "scripts": {
        "frontend:install": "cd frontend && npm install",
        "frontend:start": "npm run --prefix frontend start",
        "frontend:build": "npm run --prefix frontend build",
        "frontend:test": "npm run --prefix frontend test",
        "frontend:deploy": "npm run --prefix frontend deploy",
        "backend:install": "cd backend && npm install",
        "backend:build": "npm run --prefix backend build",
        "backend:start": "npm run --prefix backend start",
        "backend:deploy": "npm run --prefix backend deploy",
        "deploy": "npm run backend:deploy && npm run frontend:deploy"
    }
}